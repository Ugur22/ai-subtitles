# Hugging Face Authentication Token
# Get your token from: https://huggingface.co/settings/tokens
# Accept pyannote conditions at: https://huggingface.co/pyannote/speaker-diarization
HUGGINGFACE_TOKEN=your_token_here

# CORS Configuration
# Allowed origins for CORS (JSON array format)
# For development: CORS_ORIGINS=["http://localhost:5173"]
# For production: CORS_ORIGINS=["https://myapp.vercel.app","https://app.example.com"]
CORS_ORIGINS=["http://localhost:5173"]

# Whisper Model Configuration
FASTWHISPER_MODEL=small
FASTWHISPER_DEVICE=cpu
FASTWHISPER_COMPUTE_TYPE=int8

# Speaker Diarization Settings
ENABLE_SPEAKER_DIARIZATION=true
MIN_SPEAKERS=1
MAX_SPEAKERS=10

# LLM Settings
# Choose: local (Ollama), groq, openai, anthropic, or grok
DEFAULT_LLM_PROVIDER=local
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Groq API Settings (optional - for cloud LLM)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI API Settings (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic API Settings (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# xAI Grok API Settings (optional)
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL==example_model
